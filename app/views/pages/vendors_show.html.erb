<div class="container vh-100 mt-3">
  <div class="card-trip rounded">
    <img class="card-img-top" src="https://source.unsplash.com/400x300/?<%= @vendor.handle %>,<%= @vendor.description %>/300x200" />
    <div class="card-trip-infos">
      <div>
        <h2><%= @vendor.handle %></h2>
        <p><strong>Description: </strong><%= @vendor.description %></p>
        <p><strong>Area of operation: </strong><%= @vendor.location %></p>
      </div>
      <h2 class="card-trip-pricing">rating</h2>
    </div>
    <div class="container d-flex justify-content-center", style="background-color: #d3e0ea;">
      <div class="my-3">
        <%= link_to "My services", services_path(@vendor), class:"btn btn-primary" %>
        <%# link_to "My reviews", reviews_path(@vendor), class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
