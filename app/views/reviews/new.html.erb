<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1> Rate This Job </h1>
      
      <%= simple_form_for [@job, @review] do |f| %>
      <%= f.input :rating, collection: (1..5) %>
      <%= f.input :comment %>
      <%= f.button :submit, class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>
