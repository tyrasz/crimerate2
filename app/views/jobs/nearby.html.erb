<section class="jumbotron text-center py-5"style=" background-color: #d3e0ea;">
  <div class="container">

<h1>Nearby jobs heat map</h1>

<h1>These are the jobs you are looking for</h1>

  </div>
</section>

<div class="contaner d-flex bg-light">
  <div class="container flex-grow-1">
    <div class="album py-3 px-3 bg-light">
      <h1 id="completed">Jobs completed</h1>
      <div class="cards mt-3" style="display:grid; grid-template-columns: 1fr 1fr 1fr; grid-gap:10px">
        <%= render @jobs %>
      </div>
    </div>
  </div>

  <div class="container mt-3">
    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>




