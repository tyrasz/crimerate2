<div class="container vh-100 mt-3">
  <h1> Edit selected job </h1>
  <%= simple_form_for @job do |f| %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :location %>
    <%= f.input :status, collection: ['Not yet started', 'In progress', 'Completed'] %>
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
  <% end %>
</div>

