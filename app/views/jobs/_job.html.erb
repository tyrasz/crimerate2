<div class="card mb-4 box-shadow">
  <% if job.photo.attached? %>
    <%= cl_image_tag job.photo.key, class:"card-img-top", height: 300, width: 400, crop: :fill %>
  <% else %>
    <img class="card-img-top" src="https://source.unsplash.com/400x300/?<%= job.description %>,<%= job.service.category %>/300x200" />
  <% end %>

  <div class="card-body">
    <h4 class="card-title"><%= link_to job.service.name, job_path(job) %></h4>
    <p class="card-text"><strong>Category: </strong><%= job.service.category %></p>
    <p class="card-text"><strong>Job description: </strong><%= job.description %></p>
    <p class="card-text"><strong>Requested by: </strong><%= job.user.handle %></p>
    <p class="card-text"><strong>Serviced by: </strong><%= job.service.user.handle %></p>
    <p class="card-text"><strong>Price paid: </strong>$<%= job.service.price %></p>
    <p class="card-text"><strong>Status: </strong><%= job.status %></p>
    <p class="card-text"><strong>Create date: </strong><%= job.created_at.strftime('%F') %></p>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <%= link_to "View", job_path(job.id), class:"btn btn-sm btn-outline-secondary" %>
        <%= link_to "Delete", job_path(job.id), method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-sm btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>

