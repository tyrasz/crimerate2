<!-- <div class="d-flex"> -->
  <div class="card-trip" style="display:grid; grid-template-columns: 1fr 1fr 1fr; grid-gap:10px">
  
    <% @jobs.each do |job| %>
      <div class=" text-center">
        <div class="card h-100">
          <% if job.photo.attached? %>
            <%= cl_image_tag job.photo.key, class:"card-img-top", height: 300, width: 400, crop: :fill %>
          <% else %>
            <img class="card-img-top" src="https://source.unsplash.com/random/300x200" />
          <% end %>
          <div class="card-body">
            <h4 class="card-title"><%= link_to job.service.name, job_path(job) %></h4>
            <p class="card-text">By: <%= job.user.handle %></p>
            <p class="card-text">Price: $<%= job.service.price %></p>
            <p class="card-text">Category: <%= job.service.category %></p>
            <%= link_to "See the job!", job_path(job), class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

