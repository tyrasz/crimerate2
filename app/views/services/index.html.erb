<section class="jumbotron text-center py-5">
  <div class="container">
    <h1 class="jumbotron-heading">All services</h1>
    <p class="lead text-muted">Here you can find all available services on CrimeRate</p>
    <div class="container">
      <%= form_tag(services_path, method:"get") do %>
        <select name="search", class="form-control w-80 d-inline-block">
          <option value="None">-Select-</option>
          <option value="Burglary">Burglary</option>
          <option value="Cybercrime">Cybercrime</option>
          <option value="Drugs">Drugs</option>
          <option value="Harassment">Harassment</option>
          <option value="Homicide">Homicide</option>
          <option value="Theft">Theft</option>
          <option value="Vandalism">Vandalism</option>
        </select>
        <input type="submit" value="Filter">
      <% end %>
    </div>
  </div>
  <%= link_to 'Create a service', new_service_path, class:"btn btn-primary my-2" %>
</section>

