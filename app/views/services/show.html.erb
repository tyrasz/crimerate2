
<div class="card text-center col-6" >
  <div class="card-header">
    <h1> <%= @service.name %> </h1>
    <% if @service.photo.attached? %>
    <%= cl_image_tag @service.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>
  
  
  <div class="card" style="width: 32,5rem;" >
    <img src="https://source.unsplash.com/random/300x200" class="card-img-top" />
    <div class="card-body">
      
      <p class="card-title" > Price: <%= @service.price %> </p>
      <p class="card-text"> Category: <%= @service.category %> </p>
      <%= link_to "Book this service!", new_service_job_path(@service), class:"btn btn-primary" %>
      <br>
    </div>
  </div>
  
  
  
  
  <!-- if role = "user" link to create new job form -->
  
  <%= link_to "Destroy!", service_path(@service), method: :delete, data: { confirm: "Tio boh?"}, class:"far fa-trash-alt", class:"btn btn-secondary"  %>
  
</div>





